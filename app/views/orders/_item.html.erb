<tr>
  <td>
    <%= image_tag item.product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= product.price %>
  </td>
  <td>
   
    <%= item.quantity %>
   
  </td>
  <td>
    <%= item.product.price * item.quantity %>
  </td>
</tr>
